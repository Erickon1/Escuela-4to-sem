
package fes.aragon.inicio

public class Arreglo{
	private int[] arreglo;
	
	public Arreglo(){//constructor
		arreglo = new int [30];//si no se indica el valor del arreglo, su default sera 30
		for (int i=0; i<arreglo.length ; i++){
			arreglo[i]= i+1;
		}	
	}
	public Arreglo (int dato){
		arreglo = new int [dato];
		for(int i=0; i<arreglo.length; i++){
			arreglo[i]=i+1;
		}	
	}
	public int[] getArreglo(){
		return arreglo;
	}


}
